{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/server",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "declaration": false
  },
  "include": ["src/**/*", "../shared/**/*"]
}
